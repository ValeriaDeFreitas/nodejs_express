<%- include ('partials/header.ejs') %>
    <%- include ('partials/navbar.ejs') %>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h1>Editar cliente</h1>
                    <hr>
                </div>
                <div class="card-body">
                    <form action="/clientes/update" method="post">

                        <label>Nome do Cliente:</label>
                        <input class="form-control" type="text" name="nome" id="nome" value="<% cliente.nome %>"
                            required>

                        <label>Cpf do Cliente:</label>
                        <input class="form-control" type="text" name="cpf" id="nome" value="<% cliente.cpf %>" required>

                        <label>Endereço do Cliente:</label>
                        <input class="form-control" type="text" name="endereco" id="nome" value="<% cliente.endereco %>"
                            required>
                        <input type="hidden" name="id" value="<%=cliente%>" <br>
                        <input type="submit" class="btn btn-warning" value="Alterar"
                            onclick="return confirm('Confirma as alterações dos dados?')">
                    </form>
                    <hr>
                </div>
            </div>
        </div>